<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/toast_wrong_layout_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="8dp"
              android:background="#DC00"
              >
    <TextView android:id="@+id/textWrongToast"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFF"
              android:text="@string/wrongToast"
              android:textAppearance="?android:attr/textAppearanceLarge" 
              />
    <TextView android:id="@+id/textWrongToastDetails"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFF"
              android:text="@string/wrongToastDetails"
              />
</LinearLayout>