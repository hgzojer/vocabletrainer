<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/toast_finished_layout_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="8dp"
              android:background="#D00C"
              >
    <TextView android:id="@+id/textFinishedToast"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFF"
              android:text="@string/finishedToast"
              android:textAppearance="?android:attr/textAppearanceLarge" 
              />
    <TextView android:id="@+id/textFinishedToastDetails"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFF"
              android:text="@string/finishedToastDetails"
              />
</LinearLayout>